@using ResearchApp.Data
<div class="placeholders mb-2">
    <div class="wrapper">
        <div id="search-tab-strip">
            <ul>
                <li>Authors</li>
                <li>Works</li>
                <li>Elements</li>
                <li>Search</li>
            </ul>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        var tabStrip = $("#search-tab-strip").kendoTabStrip({
            animation: { open: { effects: "fadeIn" } },
            contentUrls: [
                {
                    url: "/Grid/SearchForm",
                    cache: false,
                    type: "Post",
                    data: getSearchParams('@GridTypes.VAuthor', true)
                },
                {
                    url: "/Grid/SearchForm",
                    cache: false,
                    type: "Post",
                    data: getSearchParams('@GridTypes.VWork', true)
                },
                {
                    url: "/Grid/SearchForm",
                    cache: false,
                    type: "Post",
                    data: getSearchParams('vElement', true)
                },
                {
                    url: "/Grid/GetCommonSearchForm",
                    cache: false,
                    type: "Post",
                }
            ],
            select: function (e) {
                showLoading();
            },
            activate: function (e) {
                if (!searchForm.ajaxRequest) {
                    hideLoading();
                }
            }
        }).data('kendoTabStrip');
        resizeTabStrip();
        resizeSearchSplitter();
        setTimeout(function () {
            tabStrip.reload("li:eq(1)");
            tabStrip.reload("li:eq(2)");
        }, 500);
        tabStrip.select(0);
    });
</script>