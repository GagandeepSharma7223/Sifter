@model ResearchApp.ViewModel.DropdownOptions

@(Html.Kendo().DropDownListFor(m => m)
                      .DataValueField("Id")
                      .DataTextField("Option")
                      .Filter(FilterType.Contains)
                      .Height(200)
                      .SelectedIndex(1)
                      .DataSource(source =>
                      {
                          source.Custom()
                                .ServerFiltering(true)
                                .ServerPaging(true)
                                .PageSize(20)
                                .Type("aspnetmvc-ajax")
                                .Transport(transport =>
                                {
                                    transport.Read("GetDropdownOptions", "Grid", new { treeTable = "Category", optionCol = "Name" });
                                })
                                .Schema(schema =>
                                {
                                    schema.Data("Data")
                                          .Total("Total");
                                });
                      })
                      .Events(e => e.Open("function(e){ onDropdownOpen(e, 'Category') }").DataBound("onDropdownDataBound"))
                      .HeaderTemplateId("optionLabelTemplate")
                      .Virtual(v => v.ItemHeight(26).ValueMapper("valueMapperCategory"))

)