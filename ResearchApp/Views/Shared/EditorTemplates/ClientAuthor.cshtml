@model ResearchApp.ViewModel.DropdownOptions

@(Html.Kendo().DropDownListFor(m => m)
                  .DataValueField("Id")
                  .DataTextField("Option")
                  .Filter(FilterType.Contains)
                  .MinLength(3)
                  .Height(200)
                  .DataSource(source =>
                  {
                      source.Custom()
                            .ServerFiltering(true)
                            .ServerPaging(true)
                            .PageSize(20)
                            .Type("aspnetmvc-ajax")
                            .Transport(transport =>
                            {
                                transport.Read("GetDropdownOptions", "Grid", new { treeTable = "Author", optionCol = "FullName" });
                            })
                            .Schema(schema =>
                            {
                                schema.Data("Data")
                                      .Total("Total");
                            });
                  }).OptionLabel("Add New").Events(e => e.Select("onSelect"))
                  .Virtual(v => v.ItemHeight(26).ValueMapper("valueMapperAuthor"))

)
